{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CIEL POS",
  "version": "0.1.0",
  "identifier": "com.ilaydakx.possystem",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CIEL POS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main window capability (core + dialog confirm)",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "dialog:default",
            "dialog:allow-confirm"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "icon": [ 
      "icons/32x32.png",
      "icons/icon.png",
      "icons/icon.ico"
      ]
  }
}
